{
    "editor.formatOnSave": true,
    "clang-format.executable": "/usr/lib/llvm-12/bin/clang-format",
    "clang-format.style": "file",
    "clang-tidy.executable": "/usr/lib/llvm-12/bin/clang-tidy",
    "clang-tidy.fixOnSave": false,
    "clang-tidy.lintOnSave": true,
    "clang-tidy.buildPath": "./build",
    "clang-tidy.compilerArgs": [
        "-header-filter=.*"
    ],
    "todo-tree.tree.autoRefresh": true,
    "todo-tree.highlights.customHighlight": {
        "WARN": {
            "foreground": "white",
            "background": "red",
            "iconColour": "red",
            "icon": "alert",
            "type": "text"
        },
        "TODO": {
            "foreground": "black",
            "background": "green",
            "iconColour": "green",
            "icon": "check",
            "type": "text"
        },
        "FIXME": {
            "foreground": "black",
            "background": "red",
            "iconColour": "red",
            "icon": "bug"
        },
        "REVIEW": {
            "foreground": "black",
            "background": "cyan",
            "iconColour": "lightblue",
            "icon": "eye"
        },
        "HACK": {
            "foreground": "black",
            "background": "#FFA500",
            "iconColour": "orange",
            "icon": "alert"
        },
        "NOTE": {
            "foreground": "black",
            "background": "grey",
            "iconColour": "grey",
            "icon": "link",
        }
    },
    "todo-tree.highlights.defaultHighlight": {
        "type": "text-and-comment"
    },
    "todo-tree.general.tags": [
        "TODO",
        "FIXME",
        "REVIEW",
        "HACK",
        "NOTE",
        "WARN"
    ]
}